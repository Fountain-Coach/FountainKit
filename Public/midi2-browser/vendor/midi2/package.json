{
  "name": "@fountain-coach/midi2",
  "version": "0.7.0",
  "private": false,
  "description": "Cross-browser, CoreMIDI-free MIDI 2.0 protocol and scheduler core.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fountain-coach/midi2.git"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "codegen": "node ./scripts/generate-openapi-types.mjs",
    "build": "npm run codegen && tsup src/index.ts --dts --format esm,cjs --target es2020 --sourcemap --out-dir dist",
    "check": "npm run codegen && tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "ci": "npm run codegen && npm run check && npm test"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "tsup": "^8.5.1",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  }
}
