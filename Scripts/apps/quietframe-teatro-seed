#!/usr/bin/env bash
set -euo pipefail

ROOT_DIR="$(cd "$(dirname "$0")/../.." && pwd)"
PKG_PATH="$ROOT_DIR/Packages/FountainApps"

echo "[seed] Seeding QuietFrame Teatro prompt (corpus=quietframe)â€¦"
FOUNTAIN_SKIP_LAUNCHER_SIG=1 swift run --package-path "$PKG_PATH" -c debug quietframe-teatro-seed

echo "[seed] Fetch prompt:"
echo "  CORPUS_ID=quietframe SEGMENT_ID='prompt:quietframe:teatro' swift run --package-path Packages/FountainApps store-dump"
echo "[seed] Fetch facts:"
echo "  CORPUS_ID=quietframe SEGMENT_ID='prompt:quietframe:facts' swift run --package-path Packages/FountainApps store-dump"

