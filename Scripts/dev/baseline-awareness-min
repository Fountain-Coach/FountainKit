#!/usr/bin/env bash
set -euo pipefail

# Minimal Baseline-Awareness-only build helper
# Usage: Scripts/dev/baseline-awareness-min [build|run]

ROOT_DIR="$(cd "$(dirname "$0")/../.." && pwd)"
PKG_PATH="$ROOT_DIR/Packages/FountainApps"

export FK_MIN_TARGET=baseline-awareness
export FK_SKIP_NOISY_TARGETS=1
export FOUNTAIN_SKIP_LAUNCHER_SIG=1

cmd="${1:-build}"
case "$cmd" in
  build)
    echo "[baseline-awareness-min] Building baseline-awareness-server (minimal)…"
    swift build --package-path "$PKG_PATH" -c debug --target baseline-awareness-server
    ;;
  run)
    echo "[baseline-awareness-min] Running baseline-awareness-server (minimal)…"
    swift run --package-path "$PKG_PATH" -c debug baseline-awareness-server
    ;;
  *)
    echo "Usage: $0 [build|run]" >&2
    exit 2
    ;;
esac

