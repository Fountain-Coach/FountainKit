#!/usr/bin/env bash
set -euo pipefail

# Minimal Function-Caller-only build helper
# Usage: Scripts/dev/function-caller-min [build|run]

ROOT_DIR="$(cd "$(dirname "$0")/../.." && pwd)"
PKG_PATH="$ROOT_DIR/Packages/FountainApps"

export FK_MIN_TARGET=function-caller
export FK_SKIP_NOISY_TARGETS=1
export FOUNTAIN_SKIP_LAUNCHER_SIG=1

cmd="${1:-build}"
case "$cmd" in
  build)
    echo "[function-caller-min] Building function-caller-server (minimal)…"
    swift build --package-path "$PKG_PATH" -c debug --target function-caller-server
    ;;
  run)
    echo "[function-caller-min] Running function-caller-server (minimal)…"
    swift run --package-path "$PKG_PATH" -c debug function-caller-server
    ;;
  *)
    echo "Usage: $0 [build|run]" >&2
    exit 2
    ;;
esac

