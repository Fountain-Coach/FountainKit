#!/usr/bin/env bash
set -euo pipefail

ROOT_DIR="$(cd "$(dirname "$0")/../.." && pwd)"
PKG_PATH="$ROOT_DIR/Packages/FountainApps"

export FK_MIN_TARGET=function-caller
export FK_SKIP_NOISY_TARGETS=1
export FOUNTAIN_SKIP_LAUNCHER_SIG=1

case "${1:-build}" in
  build) echo "[fc-min] Building function-caller-server…"; swift build --package-path "$PKG_PATH" -c debug --target function-caller-server;;
  run)   echo "[fc-min] Running function-caller-server…"; swift run --package-path "$PKG_PATH" -c debug function-caller-server;;
  *)     echo "Usage: $0 [build|run]" >&2; exit 2;;
esac

