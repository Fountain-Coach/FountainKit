#!/usr/bin/env bash
set -euo pipefail

# Minimal Planner-only build helper
# Usage: Scripts/dev/planner-min [build|run]

ROOT_DIR="$(cd "$(dirname "$0")/../.." && pwd)"
PKG_PATH="$ROOT_DIR/Packages/FountainApps"

export FK_MIN_TARGET=planner
export FK_SKIP_NOISY_TARGETS=1
export FOUNTAIN_SKIP_LAUNCHER_SIG=1

cmd="${1:-build}"
case "$cmd" in
  build)
    echo "[planner-min] Building planner-server (minimal)…"
    swift build --package-path "$PKG_PATH" -c debug --target planner-server
    ;;
  run)
    echo "[planner-min] Running planner-server (minimal)…"
    swift run --package-path "$PKG_PATH" -c debug planner-server
    ;;
  *)
    echo "Usage: $0 [build|run]" >&2
    exit 2
    ;;
esac

