#!/usr/bin/env bash
set -euo pipefail

# Minimal QuietFrame-only build helper
# Usage: Scripts/dev/quietframe-min [build|run]

ROOT_DIR="$(cd "$(dirname "$0")/../.." && pwd)"
PKG_PATH="$ROOT_DIR/Packages/FountainApps"

export FK_MIN_TARGET=quietframe
export FK_SKIP_NOISY_TARGETS=1
export FOUNTAIN_SKIP_LAUNCHER_SIG=1

cmd="${1:-build}"
case "$cmd" in
  build)
    echo "[quietframe-min] Building quietframe-service-server (minimal)…"
    swift build --package-path "$PKG_PATH" -c debug --target quietframe-service-server
    ;;
  run)
    echo "[quietframe-min] Running quietframe-service-server (minimal)…"
    swift run --package-path "$PKG_PATH" -c debug quietframe-service-server
    ;;
  *)
    echo "Usage: $0 [build|run]" >&2
    exit 2
    ;;
esac

