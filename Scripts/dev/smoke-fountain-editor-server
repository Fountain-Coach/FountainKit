#!/usr/bin/env bash
set -euo pipefail

# Smoke testing for the editor server is disabled.
# Rationale: server mains run a real HTTP server; in‑process smoke variants
# led to hangs during TDD. Use unit/integration tests or editor‑vrt instead.

echo "[smoke] disabled for fountain-editor-service-server. Use:"
echo "  - swift test --package-path Packages/FountainApps -c debug --filter FountainEditorServerTests"
echo "  - bash Scripts/ci/editor-vrt.sh (snapshots)"
exit 2
