{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://fountain.coach/schemas/agent-descriptor.schema.json",
  "title": "FountainAI Agent Descriptor",
  "description": "Interoperability descriptor for FountainAI agents (OpenAPI microservices and MIDI 2.0 instruments).",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "x-agent-id": {
      "type": "string",
      "description": "Stable, unique identifier.",
      "pattern": "^fountain\\.coach/agent/[a-z0-9._-]+/[a-z0-9._-]+$"
    },
    "x-agent-kind": {
      "type": "string",
      "enum": [
        "microservice",
        "instrument",
        "hybrid"
      ],
      "description": "Embodiment of the agent."
    },
    "x-agent-version": {
      "type": "string",
      "description": "Semantic Versioning (SemVer) 2.0.0 string.",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-([0-9A-Za-z-]+(?:\\.[0-9A-Za-z-]+)*))?(?:\\+([0-9A-Za-z-]+(?:\\.[0-9A-Za-z-]+)*))?$"
    },
    "x-agent-capabilities": {
      "type": "array",
      "description": "List of capability identifiers.",
      "items": {
        "type": "string",
        "minLength": 1,
        "pattern": "^[a-z][a-z0-9._-]*$"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "x-agent-protocol": {
      "type": "string",
      "enum": [
        "openapi-3.1",
        "midi-ci-pe",
        "hybrid"
      ],
      "description": "Primary protocol binding (deprecated in favor of x-agent-protocols)."
    },
    "x-agent-protocols": {
      "type": "array",
      "description": "One or more protocol bindings.",
      "items": {
        "type": "string",
        "enum": [
          "openapi-3.1",
          "midi-ci-pe",
          "hybrid"
        ]
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "info": {
      "type": "object",
      "description": "Human-readable metadata (subset of OpenAPI info).",
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "version"
      ]
    },
    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "modified": {
          "type": "string",
          "format": "date-time"
        },
        "firmware": {
          "type": "string"
        },
        "gitSHA": {
          "type": "string",
          "pattern": "^[0-9a-f]{7,40}$"
        }
      }
    },
    "x-agent-signature": {
      "type": "string",
      "description": "SHA-256 over canonicalized descriptor.",
      "pattern": "^[0-9a-fA-F]{64}$"
    }
  },
  "required": [
    "x-agent-id",
    "x-agent-kind",
    "x-agent-version",
    "x-agent-capabilities"
  ],
  "anyOf": [
    {
      "required": [
        "x-agent-protocols"
      ]
    },
    {
      "required": [
        "x-agent-protocol"
      ]
    }
  ]
}
